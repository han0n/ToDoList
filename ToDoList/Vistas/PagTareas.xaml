<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoList.PagTareas"
             Title="Tareas">
    <ContentPage.Content>
        <Grid Padding="0,0,0,0" 
              RowDefinitions="Auto, *, Auto" 
              ColumnDefinitions="Auto">
            <Grid Grid.Row="0"
                  RowDefinitions="Auto"
                  ColumnDefinitions="Auto, Auto, Auto"
                  Padding="4,8,4,0">

                <Label Grid.Column="0"
                       Text="Para hoy"
                       FontSize="Medium"
                       VerticalOptions="CenterAndExpand"/>

                <Label Grid.Column="1"  
                       x:Name="lblDiaHoy" 
                       FontAttributes="Bold"
                       FontSize="22"
                       VerticalOptions="End"/>

                <Label Grid.Column="2"
                       Text=":"
                       FontSize="Medium"
                       VerticalOptions="CenterAndExpand"/>
            </Grid>

            <ListView x:Name="LvTareas" Grid.Row="1">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <Grid ColumnDefinitions="Auto, *, Auto"
                                      RowDefinitions="Auto, Auto"
                                      Padding="4,0,0,0">
                                    <Label Text="{Binding Titulo}"
                                           Grid.Row="0"/>
                                    <Label Text="{Binding Comentario}"
                                           Grid.Row="1"/>
                                </Grid>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackLayout Grid.Row="2">
                <Grid ColumnDefinitions="*, *, *, *"
                      RowDefinitions="*, *">
                    
                    <Button Text="Borrar"
                            x:Name="btnBorrar"
                            Grid.ColumnSpan="2"
                            Grid.Column="0"
                            Grid.Row="0"/>

                    <Button Text="Modificar"
                            x:Name="btnModificar"
                            Grid.ColumnSpan="2"
                            Grid.Column="2"
                            Grid.Row="0"/>

                    <Button Text="Crear"
                            x:Name="btnCrear"
                            Grid.ColumnSpan="4"
                            Grid.Column="0"
                            Grid.Row="1"/>
                </Grid>
            </StackLayout>

        </Grid>
    </ContentPage.Content>
</ContentPage>