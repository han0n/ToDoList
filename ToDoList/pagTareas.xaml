<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoList.pagTareas"
             Title="Tareas">
    <ContentPage.Content>
        <Grid Padding="0,0,0,0" 
              RowDefinitions="Auto, Auto, Auto, *" 
              ColumnDefinitions="Auto, *, Auto">

            <Label Grid.Row="1" 
                   Grid.Column="1" 
                   Grid.ColumnSpan="2" 
                   x:Name="lblFechaCorta" 
                   Margin="0,0,10,0" 
                   FontAttributes="Bold" 
                   FontSize="30" 
                   Padding="10,0,0,0"/>

            <Label Grid.Row="1" 
                   Grid.Column="3"  
                   x:Name="lblDiaHoy" 
                   Margin="0,0,10,0" 
                   FontAttributes="Bold" 
                   FontSize="30" 
                   Padding="10,0,0,0"/>
            <!--En principio, aquí iran los elementos vacíos para listar los objetos creados-->

            <Button Text="Crear"
                    x:Name="btnCrear"
                    Grid.ColumnSpan="4"
                    Grid.Column="0"
                    VerticalOptions="End"/>

        </Grid>
    </ContentPage.Content>
</ContentPage>